---
interface Props {
  name: string;
  review: string;
  avatarInitial?: string;
}

const { name, review, avatarInitial } = Astro.props;
---

<div class="bg-[#1f1f1f] p-6 rounded-lg break-inside-avoid mb-6">
  <div class="flex items-center mb-4">
    <div class="w-10 h-10 rounded-full bg-gray-600 flex items-center justify-center text-white font-bold mr-3">
      {avatarInitial || name.charAt(0)}
    </div>
    <div>
      <h3 class="font-bold text-sm">{name}</h3>
      <div class="flex items-center text-xs text-gray-400">
        <span class="w-3 h-3 bg-white rounded-full mr-1 flex items-center justify-center text-black font-bold" style="font-size: 8px;">G</span>
        GOOGLE REVIEW
      </div>
    </div>
  </div>
  <div class="flex text-[#f57f20] mb-3">
    {[...Array(5)].map(() => (
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
        <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
      </svg>
    ))}
  </div>
  <p class="text-sm text-gray-300 leading-relaxed">
    {review}
  </p>
</div>
